---
export interface Props {
  type: "BlogPosting" | "Person" | "WebSite";
  data: any;
}

const { type, data } = Astro.props;

let structuredData = {};

if (type === "BlogPosting") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    headline: data.title,
    description: data.description,
    author: {
      "@type": "Person",
      name: data.author || "Shaun Hawk",
      url: "https://shaunhawk.com/about",
    },
    datePublished: data.pubDatetime.toISOString(),
    dateModified: data.modDatetime?.toISOString() || data.pubDatetime.toISOString(),
    publisher: {
      "@type": "Person",
      name: "Shaun Hawk",
      logo: {
        "@type": "ImageObject",
        url: "https://shaunhawk.com/profile.jpg",
      },
    },
    mainEntityOfPage: {
      "@type": "WebPage",
      "@id": data.url,
    },
    image: data.ogImage || "https://shaunhawk.com/profile.jpg",
    articleSection: data.tags?.[0] || "Technology",
    keywords: data.tags?.join(", ") || "",
    wordCount: data.wordCount,
    timeRequired: data.readingTime,
  };
} else if (type === "Person") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "Person",
    name: "Shaun Hawk",
    url: "https://shaunhawk.com",
    image: "https://shaunhawk.com/profile.jpg",
    sameAs: [
      "https://github.com/shawk08033",
      "https://x.com/ShaunHawkCode",
      "https://bsky.app/profile/shaunhawk.com",
      "https://linkedin.com/in/shaun-r-hawk-3b2ab174",
    ],
    jobTitle: "Lead Developer, Data Management & Technology",
    description:
      "Lead Developer of Huckleberry Services at FSM Controls. PHP, JS/TS, Rust and Go.",
  };
} else if (type === "WebSite") {
  structuredData = {
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: "Shaun Hawk",
    url: "https://shaunhawk.com",
    description:
      "Lead Developer of Huckleberry Services at FSM Controls. PHP, JS/TS, Rust and Go.",
    author: {
      "@type": "Person",
      name: "Shaun Hawk",
    },
    potentialAction: {
      "@type": "SearchAction",
      target: "https://shaunhawk.com/search?q={search_term_string}",
      "query-input": "required name=search_term_string",
    },
  };
}
---

<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />